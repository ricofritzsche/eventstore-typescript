{
  "name": "@ricofritzsche/eventstore-typescript",
  "version": "1.0.1",
  "description": "TypeScript event sourcing library core types, filters, and memory notifiers for Deno. For full PostgreSQL functionality, use the Node.js version.",
  "exports": {
    ".": "./mod.ts",
    "./notifiers": "./src/eventstore/notifiers/memory/mod.ts",
    "./types": "./src/eventstore/types.ts",
    "./filter": "./src/eventstore/filter_deno.ts"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:coverage": "deno test --allow-all --coverage",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2020", "DOM"]
  },
  "imports": {
    "@std/uuid": "jsr:@std/uuid@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "postgres": "https://deno.land/x/postgres@v0.17.0/mod.ts"
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/examples/"
  ],
  "publish": {
    "exclude": [
      "node_modules/",
      "dist/",
      "**/*.test.ts", 
      "**/*.spec.ts",
      "src/examples/",
      "tests/",
      "jest.config.js",
      "package.json",
      "package-lock.json",
      "tsconfig.json",
      "simple.ts"
    ]
  },
  "keywords": [
    "eventstore",
    "event-sourcing", 
    "eventsourcing",
    "typescript",
    "events",
    "postgresql",
    "postgres",
    "real-time",
    "subscriptions",
    "projections",
    "event-driven",
    "cqrs"
  ],
  "license": "MIT"
}